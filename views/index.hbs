<!-- search bar -->
<div class="container">
  <form action="/search" id="all-form">
    <div class=" d-flex justify-content-between align-items-center">
      <div class="input-group mb-3 w-25">
        <button class="btn btn-search" type="button"><i class="fas fa-search"></i></button>
        <input type="text" name="keyword" id="search" class="form-control" placeholder="輸入餐廳、分類"
          aria-label="Restaurant Name..." value="{{keywords}}" aria-describedby="search-button">
      </div>

      <div class="options">
        <select class="form-select form-select-lg mb-3" name="sort" id="sort" aria-label=".form-select-lg example">
          <option selected>排列方式選擇</option>
          <option value="1" href="/">A-->Z</option>
          <option value="2">Z-->A</option>
          <option value="3">類別</option>
          <option value="4">地區</option>
        </select>
      </div>
    </div>

  </form>

</div>

<!-- restaurant list -->
<div class="container mt-3 px-md-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-12 col-sm-6 col-md-4">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
          </div>
          <div class="bottom d-flex justify-content-end m-1">
            <a href="/restaurants/{{this._id}}" class="p-2 btn btn-primary m-1">details</a>
            <a href="/restaurants/{{this._id}}/edit" class="p-2 btn btn-primary m-1">edit</a>
            <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="p-2 btn btn-primary m-1">delete</button>
            </form>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>